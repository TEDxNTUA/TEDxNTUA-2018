{% extends isPjax is defined and isPjax == true ? "pjax.twig" : "theme.twig" %}
{% block title -%}
	{{ trans('general.home.title') }}
{%- endblock %}
{% block description -%}
	{{ trans('general.home.description') }}
{%- endblock %}
{% block content %}
			<article class="home">

				<section id="hero" class="wow slideInLeft">

					<div class="section-content">
						<h1 class="text-center">TEDxNTUA Chaos</h1>
						<p class="info text-center">
							<a href="/schedule"><span>{{ trans('general.home.hero.date') }}</span></a><br>
							<a href="#map"><span>{{ trans('general.home.hero.venue') }}</span></a><br>
							<a href="#map"><span>{{ trans('general.home.hero.address') }}</span></a>
						</p>
						<p class="tickets text-center">
							<a href="https://www.eventora.com">{{ trans('general.home.hero.tickets') }}</a>
						</p>
					</div>
					<canvas id="canvas" width="800" height="400"></canvas>

				</section>

				<section id="sessions" class="wow bounceInUp">

					<div class="section-content">

						<div class="container-fluid">
							{% for key, session in sessions -%}
							<div class="row no-gutters">

								<h2>{{ trans('general.home.sections.sessions.' ~ key ~ '.title') }}</h2>
								<h4>{{ session.from }}-{{ session.to }}</h4>
								<div class="container-fluid speaker-container">
									<div class="row no-gutters">
										{% for speaker in speakersBySession[key] -%}
										<div class="col col-6 col-md-3">
											<a href="/speakers#{{ speaker.sid }}">
												<img src="/images/speakers/{{ speaker.img_src }}" />
												<div class="speaker-info">
													<h3>{{ speaker.name }}</h3>
													<p class="m-0">{{ speaker.talk.event_prev | markdown }}</p>
												</div>
											</a>
										</div>
										{% endfor -%}
									</div>
								</div>

							</div>
							{% endfor -%}

					</div>

				</section>

				<section id="about" class="wow bounceInUp">

					<div class="section-content">
						<h2>{{ trans('general.home.sections.about.title') }}</h2>
						<div class="section-intro">
							<div class="description">{{ trans('general.home.sections.about.desc') | raw }}</div>
							<div class="call-to-action-wrapper">
								<a href="/about" class="call-to-action">
									{{ trans('general.home.sections.about.calltoaction') }} <i class="fa fa-chevron-right"></i>
								</a>
							</div>
						</div>
					</div>

				</section>

				<section id="sponsors" class="wow bounceInUp">

					<div class="section-content">
						<h2>{{ trans('general.home.sections.sponsors.title') }}</h2>
						<div class="section-intro">
							<div class="description">{{ trans('general.home.sections.sponsors.desc') | raw }}</div>
							<div class="call-to-action-wrapper">
								<a href="/sponsors" class="call-to-action">
									{{ trans('general.home.sections.sponsors.calltoaction') }} <i class="fa fa-chevron-right"></i>
								</a>
							</div>
						</div>
						<div class="container-fluid auspices-container">
							<h3 class="text-center">{{ trans('general.home.sections.sponsors.auspices') }}</h3>
							<div class="row no-gutters vertical-align">
								<div class="col col-12">
									<a href="https://www.ntua.gr" class="mx-auto">
										<img class="img-fluid" src="https://www.ece.ntua.gr/themes/ecetheme/assets/img/pyrforos.svg" alt="NTUA">
									</a>
								</div>
							</div>
						</div>
					</div>

				</section>

				<section id="map">

					<div class="section-content">
						<h2>{{ trans('general.home.sections.map.title') }}</h2>
						<p class="description">
							{{ trans('general.home.sections.map.desc') | raw }}
						</p>
						<div class="map-container">
							<iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3146.597835648285!2d23.69414925138816!3d37.939824679630156!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a1bc40a1e7f7ef%3A0x2d924baeaee6b696!2zzpXPhc6zzrXOvc6vzrTOtc65zr_OvSDOoM67zrHOvc63z4TOrM-BzrnOv869!5e0!3m2!1sel!2sgr!4v1517625169852" allowfullscreen></iframe>
						</div>
						<div class="container-fluid venue-gallery">
							<div class="row no-gutters">
								<div class="col col-12 col-md-6">
									<img src="http://www.greece-is.com/wp-content/uploads/2017/11/Athens_planetarium.jpg">
								</div>
								<div class="col col-12 col-md-6">
									<img src="http://www.bestgrecatravel.com/images/BestGrecaTravelEugenidioFundation.jpg">
								</div>
							</div>
							<div class="row no-gutters">
								<div class="col col-12 col-md-12">
									<img src="http://www.aplf-planetariums.info/images/planetariums/athenes.jpg">
								</div>
							</div>
						</div>
					</div>

				</section>

		</article>
{% endblock %}
