{% extends isPjax is defined and isPjax == true ? "pjax.twig" : "theme.twig" %}
{% block title -%}
{{ trans('general.team.title') }}
{%- endblock %}
{% block description -%}
{{ trans('general.team.description') }}
{%- endblock %}
{% block content %}
<article class="team">
	<section class="heading">
		<h1>{{ trans('general.team.title') }}</h1>
	</section>

	<section class="content text-center">

		<div class="container-fluid">
			<blockquote class="h3">
				<sup><i class="fa fa-quote-left" aria-hidden="true"></i></sup>
				&nbsp;{{ trans('general.team.quote') }}
				&nbsp;<sup><i class="fa fa-quote-right" aria-hidden="true"></i></sup>
			</blockquote>
		</div>

		{% for key, teamlist in teams %}
		<h2 id="{{ key }}" data-tooltip="{{ trans('general.team.' ~ key ~ '_description') }}">{{ trans('general.team.' ~ key) }}</h2>

		<div class="container-fluid">

			<div class="row vertical-align no-gutters">
				{% for person in teamlist %}
				<div class="col col-6 col-lg-3">
					<a href="mailto:{{ person.email }}" target="_blank">
						<img class="img-fluid grid-image photo1" src="{{ person.img_src }}" alt="{{ person.name }}"/>
						<img class="img-fluid grid-image photo2" src="{{ person.img_src_alt }}" alt="{{ person.name }}"/>
						<h5>{{ person.formatted_name | raw }}</h5>
					</a>
				</div>
				{% endfor %}

			</div>

		</div>
		{% endfor %}

		<div class="join-us-wrapper">
			<div class="join-us">
				<img class="img-fluid" src="{{ asset('/images/team/will_you_join_us.png') }}">
				<a class="call-to-action" target="_blank" href="https://docs.google.com/forms/d/e/1FAIpQLSdKEcQe7KrEtmyrsncLZwxz6I1zmk9hBuHUUICjuyMA82wFdQ/viewform">{{ trans('general.team.volunteer') }} &nbsp;<i class="fa fa-chevron-circle-right" aria-hidden="true"></i></a>
			</div>
		</div>

	</section>

</article>
{% endblock %}
