			<div class="row vertical-align">
				{% for person in experience %}
				<div class="col col-6 col-lg-3 centered">
					<a href="mailto:{{ person.email }}" target="_blank"><img class="img-fluid grid-image rounded-circle"
						src="{{ person.img_src }}" alt="{{ person.name }}"
						onmouseover="changePhoto(this,{{ person.img_src_alt }})"
						onmouseout="changePhoto(this,'{{ person.img_src }})">
