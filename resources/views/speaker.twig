{% extends isPjax is defined and isPjax == true ? "pjax.twig" : "theme.twig" %}
{% block title -%}
	Speakers
{%- endblock %}
{% block description -%}
	This is the speakers page
{%- endblock %}
{% block content %}

<article class="speakers">

	<section class="heading">
		<h1>Speakers</h1>
	</section>

	<section class="content">
	{% for key, speaker in speakers %}

		<div id="{{ speaker.id }}" class="container-fluid">

			
			<div class="row text-center text-lg-left">
				<div class="col col-12 col-lg-3 wow bounceInLeft">
					<img src="{{ speaker.img_src }}" width="200" height="200" class="rounded-circle wow bounceInLeft">
				</div>

				<div class="col col-12 col-lg-9 wow bounceInRight">
					<h2>{{ speaker.name }}</h2>
					<ul class="social-links list-inline">
						<li class="list-inline-item">
							<a href="https://skype.com"><i class="fa fa-skype fa-2x" aria-hidden="true"></i></a>
						</li>
						<li class="list-inline-item">
							<a href="https://twitter.com"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>
						</li>
					</ul>	 
				</div>

			</div>

			<div class="row info wow bounceInUp">
				<div class="col col-12 col-lg-6">
					<h3 class="text-center primary">{{ trans('general.speakers.short_bio') }}</h3>
					<p class="text-justify">
						{{ speaker.cv }}	
					</p>
				</div>
				<div class="col col-12 col-lg-6">
					<h3 class="text-center primary">{{ trans('general.speakers.talk') }}: {{ speaker.talk }}</h3>
					<p class="text-justify">
						{{ speaker.cv }}	
					</p>
				</div>
			</div>
		</div>

	{% endfor %}	

		<div class="row text-center text-lg-center">
				<div class="col col-12 col-lg-12 wow bounceInRight">
					<p class="back">
						<a href="/#speakers"><i class="fa fa-chevron-circle-left fa-1x" aria-hidden="true"></i> {{ trans('general.speakers.back') }}</a>
					</p>
				</div>
			</div>


	</section>
</article>



{% endblock %}